{
    "defaultSeverity": "warning",
    "extends": [
        "tslint-config-airbnb"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "object-literal-shorthand": false,
        "import-name": false,
        "variable-name": false
    }
}